# ============================================
# HSE İŞ GÜVENLİĞİ AKSİYON YÖNETİM SİSTEMİ
# Environment Variables
# Version: 1.0.0
# ============================================

# ============================================
# APPLICATION SETTINGS
# ============================================

# Environment: development, staging, production
APP_ENV=production

# Debug mode: true, false
APP_DEBUG=false

# Application URL (without trailing slash)
APP_URL=https://hse-api.misafirus.com

# Application Name
APP_NAME="HSE API"

# Application Version
APP_VERSION=1.0.0

# Timezone
APP_TIMEZONE=Europe/Istanbul

# ============================================
# DATABASE CONFIGURATION
# ============================================

# Database Host (use 'mysql' for Docker, 'localhost' for local)
DB_HOST=mysql

# Database Port
DB_PORT=3306

# Database Name
DB_NAME=hse_db

# Database User
DB_USER=hse_user

# Database Password
DB_PASSWORD=hse_password

# Database Root Password (for Docker setup)
DB_ROOT_PASSWORD=root_password

# Database Charset
DB_CHARSET=utf8mb4

# Database Collation
DB_COLLATION=utf8mb4_unicode_ci

# ============================================
# JWT AUTHENTICATION
# ============================================

# JWT Secret Key (minimum 32 characters, use strong random string)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_min_32_chars_change_this_in_production

# JWT Token Expiration (in seconds)
# 604800 = 7 days
JWT_EXPIRATION=604800

# JWT Algorithm (HS256, HS384, HS512)
JWT_ALGORITHM=HS256

# ============================================
# S3 STORAGE CONFIGURATION
# ============================================

# S3 Endpoint (MinIO, DigitalOcean Spaces, AWS S3)
# Examples:
# - MinIO: http://localhost:9000
# - DigitalOcean: https://fra1.digitaloceanspaces.com
# - AWS S3: https://s3.amazonaws.com
S3_ENDPOINT=https://files-api.apps.misafirus.com

# S3 Bucket Name
S3_BUCKET=takipus

# S3 Region
# Examples: us-east-1, eu-west-1, fra1
S3_REGION=us-east-1

# S3 Access Key
S3_ACCESS_KEY=your_s3_access_key_here

# S3 Secret Key
S3_SECRET_KEY=your_s3_secret_key_here

# S3 Use Path Style (true for MinIO, false for AWS S3)
S3_USE_PATH_STYLE=false

# S3 Public URL (for file access)
S3_PUBLIC_URL=https://files-api.apps.misafirus.com

# ============================================
# FILE UPLOAD SETTINGS
# ============================================

# Use S3 Storage (true, false) - if false, files will be stored locally
USE_S3=true

# Local Upload Directory (used when USE_S3=false)
# Relative to public/ directory or absolute path
# Example: uploads (will be /var/www/html/public/uploads)
LOCAL_UPLOAD_DIR=uploads

# Local Upload Base URL (used when USE_S3=false)
LOCAL_UPLOAD_URL=https://takipus-api.apps.misafirus.com/uploads

# Maximum file size in MB
MAX_FILE_SIZE=10

# Allowed file extensions (comma separated)
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# Upload directory (relative to S3 bucket)
UPLOAD_DIR=hse-uploads

# ============================================
# EMAIL CONFIGURATION (Future Use)
# ============================================

# SMTP Host
MAIL_HOST=smtp.gmail.com

# SMTP Port
MAIL_PORT=587

# SMTP Username
MAIL_USERNAME=your_email@example.com

# SMTP Password
MAIL_PASSWORD=your_email_password

# SMTP Encryption (tls, ssl)
MAIL_ENCRYPTION=tls

# From Email Address
MAIL_FROM_ADDRESS=noreply@misafirus.com

# From Name
MAIL_FROM_NAME="HSE API"

# ============================================
# NOTIFICATION SETTINGS
# ============================================

# Enable Email Notifications (true, false)
NOTIFICATIONS_EMAIL_ENABLED=false

# Enable Push Notifications (true, false)
NOTIFICATIONS_PUSH_ENABLED=false

# Push Notification Service URL (Future Use)
PUSH_SERVICE_URL=https://push-api.misafirus.com

# Push Service API Key
PUSH_SERVICE_KEY=your_push_service_key

# ============================================
# CRON JOB SETTINGS
# ============================================

# Enable Cron Jobs (true, false)
CRON_ENABLED=true

# Cron Job Secret Key (for security)
CRON_SECRET_KEY=your_cron_secret_key_here

# Due Date Reminder Check Interval (in minutes)
DUE_DATE_CHECK_INTERVAL=60

# ============================================
# LOGGING CONFIGURATION
# ============================================

# Log Level (debug, info, warning, error)
LOG_LEVEL=info

# Log File Path
LOG_FILE=/var/log/hse-api/app.log

# Enable Audit Log (true, false)
AUDIT_LOG_ENABLED=true

# ============================================
# SECURITY SETTINGS
# ============================================

# CORS Allowed Origins (comma separated)
# Use * for all origins (not recommended for production)
CORS_ALLOWED_ORIGINS=https://app.misafirus.com,https://admin.misafirus.com

# CORS Allowed Methods
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# CORS Allowed Headers
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Rate Limiting (requests per minute)
RATE_LIMIT=60

# Enable HTTPS Only (true, false)
HTTPS_ONLY=true

# ============================================
# AUTHAPP INTEGRATION
# ============================================

# AuthApp API URL
AUTHAPP_API_URL=https://auth-api.misafirus.com

# AuthApp API Key (for server-to-server communication)
AUTHAPP_API_KEY=your_authapp_api_key

# AuthApp Shared Secret (must match AuthApp JWT secret)
AUTHAPP_SHARED_SECRET=same_as_jwt_secret

# ============================================
# CACHE CONFIGURATION (Future Use)
# ============================================

# Cache Driver (redis, memcached, file)
CACHE_DRIVER=file

# Redis Host
REDIS_HOST=127.0.0.1

# Redis Port
REDIS_PORT=6379

# Redis Password
REDIS_PASSWORD=null

# Cache TTL (in seconds)
CACHE_TTL=3600

# ============================================
# QUEUE CONFIGURATION (Future Use)
# ============================================

# Queue Driver (redis, database, sync)
QUEUE_DRIVER=sync

# Queue Name
QUEUE_NAME=hse-queue

# ============================================
# MONITORING & ANALYTICS
# ============================================

# Enable Performance Monitoring (true, false)
MONITORING_ENABLED=false

# Sentry DSN (for error tracking)
SENTRY_DSN=your_sentry_dsn_here

# Google Analytics ID
GA_TRACKING_ID=UA-XXXXXXXXX-X

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Enable SQL Query Logging (true, false)
SQL_QUERY_LOG=false

# Enable API Request Logging (true, false)
API_REQUEST_LOG=true

# Enable Performance Profiling (true, false)
PROFILING_ENABLED=false

# Mock External Services (true, false)
MOCK_EXTERNAL_SERVICES=false

# ============================================
# DOCKER SETTINGS
# ============================================

# PHP Version
PHP_VERSION=8.2

# MySQL Version
MYSQL_VERSION=8.0

# Nginx Version
NGINX_VERSION=alpine

# ============================================
# BACKUP SETTINGS
# ============================================

# Enable Auto Backup (true, false)
AUTO_BACKUP_ENABLED=false

# Backup Directory
BACKUP_DIR=/var/backups/hse-api

# Backup Retention Days
BACKUP_RETENTION_DAYS=30

# ============================================
# NOTES
# ============================================
# 
# IMPORTANT SECURITY NOTES:
# 1. Never commit .env file to version control
# 2. Use strong, unique passwords for production
# 3. Generate JWT_SECRET with: openssl rand -base64 32
# 4. Keep S3 credentials secure
# 5. Use HTTPS in production
# 6. Enable rate limiting in production
# 7. Set APP_DEBUG=false in production
# 
# DOCKER USAGE:
# - Copy this file to .env
# - Update all "your_*" values
# - Run: docker-compose up -d
# 
# PRODUCTION CHECKLIST:
# ✓ APP_ENV=production
# ✓ APP_DEBUG=false
# ✓ Strong JWT_SECRET
# ✓ Secure database passwords
# ✓ Valid S3 credentials
# ✓ HTTPS_ONLY=true
# ✓ CORS_ALLOWED_ORIGINS set correctly
# ✓ Rate limiting enabled
# ✓ Audit log enabled
# 
# ============================================
